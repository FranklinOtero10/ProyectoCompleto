@using ADSProject.Utilities
@model IEnumerable<ADSProject.Models.Grupo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Grupos</h2>

<p>
    @Html.ActionLink("Crear", "Form", new { operacion = Operacion.insertar }, new { @class = "btn btn-primary glyphicon glyphicon-plus" })
</p>
@if (Model.Count() > 0){
<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdCarrera)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdMateria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdProfesor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ciclo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Anio)
        </th>
        <th>Opciones</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Carrera.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Materia.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Profesor.Nombres)
            @Html.DisplayFor(modelItem => item.Profesor.Apellidos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ciclo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Anio)
        </td>
        <td>
            @Html.ActionLink("Editar", "Form", new { id=item.id, operacion = Operacion.modificar }, new { @class = "btn btn-xs btn-warning"}) 
            @Html.ActionLink("Ver", "Form", new { id=item.id, operacion = Operacion.ver }, new { @class = "btn btn-xs btn-info"})
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id, operacion = Operacion.eliminar }, new { @class = "btn btn-xs btn-danger eliminar"})
        </td>
    </tr>
}

</table>
}
else
{
    <h4 class="text-center">No hay datos</h4>
}

