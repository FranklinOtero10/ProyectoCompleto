@using ADSProject.Utilities
@model IEnumerable<ADSProject.Models.Estudiante>

@{
    ViewBag.Title = "Estudiantes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listado de Estudiantes</h2>

<p>
    @Html.ActionLink("Crear", "Form", new { operacion = Operacion.insertar}, new { @class = "btn btn-primary glyphicon glyphicon-plus" })
</p>
@if(Model.Count() > 0) { 
<table class="table table-bordered table-striped" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.apellidos)
        </th> 
        <th>
            @Html.DisplayNameFor(model => model.IdCarrera)
        </th>            
        <th>Opciones</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apellidos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Carrera.nombre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Form", new { id=item.id, operacion = Operacion.modificar}, new { @class = "btn btn-xs btn-warning" }) 
            @Html.ActionLink("Ver", "Form", new { id=item.id, operacion = Operacion.ver}, new { @class = "btn btn-xs btn-info" })
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id, operacion = Operacion.eliminar}, new { @class = "btn btn-xs btn-danger eliminar"})
        </td>
    </tr>
}

</table>
}
else
{
    <h4 class="text-center">No hay datos</h4>
}
